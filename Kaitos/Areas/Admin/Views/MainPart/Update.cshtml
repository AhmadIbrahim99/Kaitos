@model MainPart
@{
    ViewData["Title"] = "MainPart Page";
}
<div class="pt-5">
    <div class="row justify-content-center">
        <div class="col-10">
            <form asp-action="Update" enctype="multipart/form-data">
                <input disabled asp-for="Id"/>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="Title" class="form-label" ></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="Description" class="form-label" ></label>
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="Image " class="form-label" ></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <img class="rounded-circle" src="~/ProjectImages/@Model.Image"/>
                        <input hidden asp-for="Image"/>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="Vedio" class="form-label" ></label>
                        <input asp-for="Vedio" class="form-control" />
                        <span asp-validation-for="Vedio"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Update</button>
            </form>
        </div> 
    </div>  
</div>