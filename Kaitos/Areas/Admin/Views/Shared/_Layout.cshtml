<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kaitos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kaitos.styles.css" asp-append-version="true" />

  <!--====== Favicon Icon ======-->
  <link rel="shortcut icon" href="~/images/favicon.svg" type="image/svg" asp-append-version="true"/>


  <!--====== Line Icons css ======-->
  <link rel="stylesheet" href="~/css/lineicons.css" asp-append-version="true"/>

  <!--====== Tiny Slider css ======-->
  <link rel="stylesheet" href="~/css/tiny-slider.css" asp-append-version="true"/>

  <!--====== gLightBox css ======-->
  <link rel="stylesheet" href="~/css/glightbox.min.css" asp-append-version="true"/>

  <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>
</head>
<body>
    <!--====== NAVBAR NINE PART START ======-->

  <section class="navbar-area navbar-nine">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="index.html">
              <img src="~/images/white-logo.svg" alt="Logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNine"
              aria-controls="navbarNine" aria-expanded="false" aria-label="Toggle navigation">
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse sub-menu-bar" id="navbarNine">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <a class="page-scroll active" href="#hero-area">Home</a>
                </li>
                <li class="nav-item">
                  <a class="page-scroll" href="#services">Services</a>
                </li>

                <li class="nav-item">
                  <a class="page-scroll" href="#blog">Blog</a>
                </li>
                <li class="nav-item">
                  <a asp-action="Index" asp-area="Admin" asp-controller="ContactUs">Contact</a>
                </li>
                <li class="nav-item">
                  <a asp-action="Index" asp-area="Admin" asp-controller="AboutUs">AboutUs</a>
                </li>
              </ul>
            </div>
          </nav>
          <!-- navbar -->
        </div>
      </div>
      <!-- row -->
    </div>
    <!-- container -->
  </section>

  <!--====== NAVBAR NINE PART ENDS ======-->

 <div class="container mt-5">
        @RenderBody()
 </div>
